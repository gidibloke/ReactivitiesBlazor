<div class="ui inverted top fixed menu">
        <div class="ui container">
            <a class="header item" href="">
                <img src="images/logo.png" alt="logo" style="margin-right: 10px;" />
                Reactivities
            </a>
            <a aria-current="page" class="item active" href="activities">Activities</a>
            <div class="item"><a class="ui positive button" role="button" href="createActivity">Create Activity</a></div>


            <div class="right item"><img src="images/user.png" class="ui avatar right spaced image">
                <div role="listbox" aria-expanded="false" class="ui @cssClassVisible top left pointing dropdown" tabindex="0">
                    <div class="text" role="alert" aria-live="polite" aria-atomic="true">
                        @User.DisplayName
                    </div>
                    <i aria-hidden="true" class="dropdown icon" @onclick="Dropdown"></i>
                    <div class="menu transition">
                        <a role="option" class="item" href="/profile/@User.Username">
                            <i aria-hidden="true" class="user icon"></i><span class="text">My profile</span>
                        </a>
                        <div role="option" class="item">
                            <i aria-hidden="true" class="power icon">
                            </i><span class="text" @onclick="LogOut">Logout</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


@code{
    [Inject]
    public IAuthenticationService AuthenticationService { get; set; }

    protected string cssClassVisible;

    private User User;
    protected override void OnInitialized()
    {
        User = AuthenticationService.User;
        //base.OnInitialized();
    }

    protected async Task LogOut()
    {
        await AuthenticationService.Logout();
    }

    protected void Dropdown()
    {
        cssClassVisible = "active visible";
    }
}

















































